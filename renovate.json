{
    "$schema": "https://docs.renovatebot.com/renovate-schema.json",
    "extends": ["config:base", "schedule:monthly"],
    "packageRules": [
        {
            "groupName": "HyTTS",
            "paths": ["package.json"],
            "updateTypes": ["minor", "patch"]
        }
    ],
    "lockFileMaintenance": {
        "enabled": true,
        "schedule": ["on the first day of the month"]
    }
}
